<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_listView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ListView_Base"
        android:textSize="20dp"/>
    <View
        android:layout_width="10dp"
        android:layout_height="10dp"/>
    <TextView
        android:id="@+id/tv_listView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ListView_User_Defined_Apdater"
        android:textSize="20dp"/>
    <View
        android:layout_width="10dp"
        android:layout_height="10dp"/>
    <TextView
        android:id="@+id/tv_listView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ListView_Add_ViewHolder"
        android:textSize="20dp"/>
    <View
        android:layout_width="10dp"
        android:layout_height="30dp"/>
    <TextView
        android:id="@+id/tv_recyclerView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RecyclerView_User_Defined_Adapter"
        android:textSize="20dp"/>



</LinearLayout>