<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/btn_send_request_http_url"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="send request Http Url" />

    <Button
        android:id="@+id/btn_send_request_ok_http_url"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="send request Ok Http" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_response_text_url"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </ScrollView>


</LinearLayout>